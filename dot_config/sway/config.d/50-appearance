client.unfocused        $outline_variant $surface           $on_surface_variant   $outline_variant $outline_variant
client.urgent           $error           $error_container   $on_error_container   $tertiary        $error
client.placeholder      $outline         $surface_dim       $on_surface_variant   $outline         $outline
client.background       $surface

